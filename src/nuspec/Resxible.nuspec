<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>Resxible</id>
		<version>1.3.0.0</version>
		<title>Resxible</title>
		<description>Localization file generator for your Xamarin iOS / Android</description>
    <summary>resxible is a simple tool to generate automatically several platform-dependent resource files from a single RESX file.</summary>
		<authors>Apcurium</authors>
		<owners>Apcurium</owners>
    <projectUrl>https://github.com/apcurium/resxible</projectUrl>
    <iconUrl>http://www.apcurium.com/wp-content/uploads/2015/03/AGI-32x32.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <tags>xamarin ios android i18n localization resx</tags>
		<dependencies />
	</metadata>
	<files>		
		<!-- tools -->
		<file src="..\GenerateResources.sh" target="content\Localization\" />
		<file src="..\GenerateResources.bat" target="content\Localization\" />

		<file src="..\Resxible\bin\Release\Resxible.exe" target="content\Localization\" />
		<file src="..\Resxible\bin\Release\Resxible.pdb" target="content\Localization\" />
		<file src="..\Resxible\*.resx" target="content\Localization\" />
	</files>
</package>